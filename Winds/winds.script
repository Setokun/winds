CREATE SCHEMA PUBLIC AUTHORIZATION DBA
CREATE MEMORY TABLE SCORES(IDPLAYER INTEGER NOT NULL,IDLEVEL INTEGER NOT NULL,TIME INTEGER,NBCLICKS INTEGER,NBITEMS INTEGER,PRIMARY KEY(IDPLAYER,IDLEVEL))
CREATE MEMORY TABLE LEVELS(ID INTEGER NOT NULL PRIMARY KEY,NAME VARCHAR,DESCRIPTION VARCHAR,TIMEMAX INTEGER,LEVELTYPE VARCHAR,LEVELSTATUS VARCHAR,LEVELMODE VARCHAR,CREATOR VARCHAR,IDTHEME INTEGER)
CREATE MEMORY TABLE THEMES(ID INTEGER NOT NULL PRIMARY KEY,NAME VARCHAR,DESCRIPTION VARCHAR)
CREATE MEMORY TABLE USERS(ID INTEGER GENERATED BY DEFAULT AS IDENTITY(START WITH 1) NOT NULL PRIMARY KEY,EMAIL VARCHAR,PASSWORD VARCHAR,PSEUDO VARCHAR,REGISTRATIONDATE VARCHAR,USERTYPE VARCHAR,CURRENT BOOLEAN,MUSIC INTEGER,EFFECTS INTEGER,RESOLUTION INTEGER)
CREATE MEMORY TABLE TROPHIES(ID INTEGER GENERATED BY DEFAULT AS IDENTITY(START WITH 1) NOT NULL PRIMARY KEY,DESCRIPTION VARCHAR)
CREATE MEMORY TABLE TROPHIES_ACHIEVED(IDPLAYER INTEGER NOT NULL,IDTROPHY INTEGER NOT NULL,ACHIEVED VARCHAR,PRIMARY KEY(IDPLAYER,IDTROPHY))
CREATE MEMORY TABLE RESOLUTIONS(ID INTEGER GENERATED BY DEFAULT AS IDENTITY(START WITH 0) NOT NULL PRIMARY KEY,WIDTH INTEGER,HEIGHT INTEGER)
